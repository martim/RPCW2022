html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="/javascripts/jquery.js")
    script(src="/javascripts/formRecurso.js")
  body
  .w3-container.w3-margin
    .w3-card-4
      header.w3-container.mobile.w3-teal
        a(href= '/' style="text-decoration: none")
          h1 Repositório de Recursos Didáticos
      .w3-container.w3-padding-16.w3-mobile
        .w3-container.w3-pale-blue.w3-center.w3-mobile
          h2 Adicionar Recurso
        form(class="w3-container" action="http://localhost:4030/genSIP" method="POST" enctype="multipart/form-data")
          .w3-row.w3-margin-bottom
            .div(id="filesDiv")
              label(class="w3-text-teal")
                b Selecionar ficheiro
              input(class="w3-input w3-border w3-light-grey" type="file" name="myFile")
            .w3-row.w3-margin-bottom
            input(class="w3-btn w3-round-larg w3-blue-grey" type="button" id="buttonAddFile" value="Adicionar Ficheiro")
          .w3-row.w3-margin-bottom
            label.w3-text-teal Título
            input.w3-input(type='text' name='title' placeholder='Título')
            label.w3-text-teal Tipo
            input.w3-input(type='text' name='type' placeholder='Tipo do ficheiro')
            label.w3-text-teal Visibilidade
            br
            input.w3-radio(type='radio' name='vis' value="publica" checked)
            label.w3-text-teal  Pública
            br
            input.w3-radio(type='radio' name='vis' value="privada")
            label.w3-text-teal  Privada
          .w3-row.w3-margin-bottom
            input(class="w3-btn w3-round-larg w3-blue-grey" type="submit" value="Enviar")
        p
          a(href= '/' class="w3-button w3-teal w3-hover-gray w3-round-large") Voltar