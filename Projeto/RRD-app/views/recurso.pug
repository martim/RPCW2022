html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
  .w3-container.w3-margin
    .w3-card-4
      header.w3-container.mobile.w3-teal
        a(href= '/' style="text-decoration: none")
          h1 Repositório de Recursos Didáticos
      .w3-container.w3-padding-16.w3-mobile
        .w3-container.w3-pale-blue.w3-center.w3-mobile
          h2= recurso.title
        ul.w3-ul.w3-card-4
          li.w3-bar
            .w3-cell-row
              .w3-cell.w3-cell-top(style="width:10%")
                span.w3-bar-item.w3-border.w3-round-xlarge
                  b Título
              .w3-cell(style="width:1%")
              .w3-cell.w3-cell-middle
                  span.w3-bar-item.w3-bar-item= recurso.title
          li.w3-bar
            .w3-cell-row
              .w3-cell.w3-cell-top(style="width:10%")
                span.w3-bar-item.w3-border.w3-round-xlarge
                  b Tipo
              .w3-cell(style="width:1%")
              .w3-cell.w3-cell-middle
                  span.w3-bar-item.w3-bar-item= recurso.type
          li.w3-bar
            .w3-cell-row
              .w3-cell.w3-cell-top(style="width:10%")
                span.w3-bar-item.w3-border.w3-round-xlarge
                  b Produtor
              .w3-cell(style="width:1%")
              .w3-cell.w3-cell-middle
                  span.w3-bar-item.w3-bar-item= recurso.prodId
          li.w3-bar
            .w3-cell-row
              .w3-cell.w3-cell-top(style="width:10%")
                span.w3-bar-item.w3-border.w3-round-xlarge
                  b Ficheiros
              .w3-cell(style="width:1%")
              .w3-cell.w3-cell-middle
                ul.w3-ul.w3-card-4
                  each f in recurso.files 
                    li.w3-bar.w3-hover-gray
                      .w3-bar-item
                        span(class="w3-large")= f.name
          li.w3-bar
            .w3-cell-row
              .w3-cell.w3-cell-top(style="width:10%")
                span.w3-bar-item.w3-border.w3-round-xlarge
                  b Comentários
              ul.w3-ul.w3-card-4
                for c in recurso.comments
                  li.w3-bar
                    .w3-bar-item
                        span
                          b= c.userId+":"
                        br
                        span= c.content
                        br
                        span(class="w3-small")= c.date
          if(token.level!="consumer")
            li.w3-bar
              .w3-cell-row
                form(class="w3-container" action="/recursos/addcomment/"+recurso._id method="POST" enctype="multipart/form-data")
                  .w3-row.w3-margin-bottom
                    label.w3-text-teal Adicionar Comentário
                      input.w3-input(type='text' name='com' placeholder='Comentário')
                  .w3-row.w3-margin-bottom
                    input(class="w3-btn w3-round-larg w3-blue-grey" type="submit" value="Enviar")

        p
          a(href= '/recursos/' class="w3-button w3-teal w3-hover-gray w3-round-large") Voltar
          