doctype html 
html 
    head 
        title Província #{prov} 
        link(rel='stylesheet', href='/stylesheets/w3.css')
        link(rel='icon', href='/images/favicon.png')
    body
        div(class="w3-container w3-padding-16 w3-center")
            div(class="w3-container w3-padding-16 w3-center w3-orange")
                h1 Arquivo Sonoro #{prov}
            br
            table(class="w3-table w3-centered w3-hoverable")
                tr(class="w3-orange")
                  th
                    b ID
                  th
                    b Título
                each m in musicas
                  tr
                    td=m.id
                    td
                      a(href= '/musicas/'+m.id)= m.tit
            div(class="w3-center")
              p
                a(href='/', class="w3-btn w3-orange") Voltar
            